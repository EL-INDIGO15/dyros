import tkinter as tk
from tkinter import ttk

# Crear la ventana principal
root = tk.Tk()
root.title("HadesHub")
root.geometry("400x300")  # Tamaño inicial
root.configure(bg="#8B0000")  # Rojo oscuro elegante (puedes cambiarlo a "red" si quieres más fuerte)
root.overrideredirect(True)  # Quita los bordes normales de Windows para un look más "hub"

# Variables para mover la ventana
moviendo = False
x_inicial = 0
y_inicial = 0

# Frame superior (barra de título personalizada)
title_bar = tk.Frame(root, bg="#FF0000", relief="flat", bd=0, height=30)
title_bar.pack(fill="x", side="top")

# Título "HadesHub"
label_title = tk.Label(title_bar, text="HadesHub", bg="#FF0000", fg="white", font=("Segoe UI", 10, "bold"))
label_title.pack(side="left", padx=10, pady=5)

# Botón de minimizar
minimized = False
def minimizar():
    global minimized
    if not minimized:
        root.geometry("200x30")  # Solo se ve la barra de título
        content_frame.pack_forget()
        minimized = True
    else:
        root.geometry("400x300")
        content_frame.pack(fill="both", expand=True, padx=10, pady=10)
        minimized = False

btn_minimizar = tk.Button(title_bar, text="─", bg="#FF0000", fg="white", bd=0, font=("Arial", 12),
                          command=minimizar, activebackground="#CC0000", cursor="hand2")
btn_minimizar.pack(side="right", padx=5)

# Botón cerrar
def cerrar():
    root.quit()

btn_cerrar = tk.Button(title_bar, text="✕", bg="#FF0000", fg="white", bd=0, font=("Arial", 10, "bold"),
                       command=cerrar, activebackground="#CC0000", cursor="hand2")
btn_cerrar.pack(side="right", padx=5)

# Funciones para mover la ventana
def empezar_movimiento(event):
    global moviendo, x_inicial, y_inicial
    moviendo = True
    x_inicial = event.x
    y_inicial = event.y

def mover_ventana(event):
    if moviendo:
        x = root.winfo_x() + (event.x - x_inicial)
        y = root.winfo_y() + (event.y - y_inicial)
        root.geometry(f"+{x}+{y}")

def detener_movimiento(event):
    global moviendo
    moviendo = False

# Hacer que la barra de título sea arrastrable
title_bar.bind("<Button-1>", empezar_movimiento)
title_bar.bind("<B1-Motion>", mover_ventana)
title_bar.bind("<ButtonRelease-1>", detener_movimiento)

# Contenido principal (aquí puedes agregar tus botones, tabs, etc.)
content_frame = tk.Frame(root, bg="#8B0000")
content_frame.pack(fill="both", expand=True, padx=10, pady=10)

# Ejemplo de etiqueta dentro del hub
label_bienvenida = tk.Label(content_frame, text="¡Bienvenido a HadesHub!", bg="#8B0000", fg="white",
                            font=("Arial", 14, "bold"))
label_bienvenida.pack(pady=50)

# Centrar la ventana al iniciar
root.update_idletasks()
x = (root.winfo_screenwidth() // 2) - (root.winfo_width() // 2)
y = (root.winfo_screenheight() // 2) - (root.winfo_height() // 2)
root.geometry(f"+{x}+{y}")

# Iniciar el loop
root.mainloop()