local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/SadOz8/Library/refs/heads/main/Library.txt"))()

-- Crear ventana roja peque√±a
local window_data, window = library:AddWindow("HadesHub", {
    main_color = Color3.fromRGB(220, 20, 60),  -- Rojo Hades üî•
    min_size = Vector2.new(300, 200),  -- M√≠nimo peque√±o
    toggle_key = Enum.KeyCode.Insert,  -- INSERT para abrir/cerrar
    can_resize = true,  -- Redimensionable
    tween_time = 0.3  -- Animaci√≥n suave
})

-- Tab principal (vac√≠a por ahora)
local tab_data, tab = window_data:AddTab("Home")

