-- HadesHub v3 - GUI Custom 100% Roja, Movible y Minimizable (Estilo Delta + Hades)
-- Tecla: INSERT para Abrir/Cerrar
-- Creado para Delta Executor - 2025 ðŸ”¥

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local HttpService = game:GetService("HttpService")

local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Crear ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "HadesHub"
ScreenGui.Parent = PlayerGui
ScreenGui.ResetOnSpawn = false
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Variables globales
local MainFrame = nil
local ContentFrame = nil
local Minimized = false
local Dragging = false
local DragStart = nil
local StartPos = nil
local Visible = true

-- FunciÃ³n para crear esquinas redondeadas
local function CreateCorner(parent, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius or 12)
    corner.Parent = parent
    return corner
end

-- FunciÃ³n para crear gradiente
local function CreateGradient(parent, color1, color2)
    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, color1),
        ColorSequenceKeypoint.new(1, color2)
    }
    gradient.Rotation = 45
    gradient.Parent = parent
    return gradient
end

-- Crear Frame Principal (Rojo Hades)
MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)  -- Fondo oscuro
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.5, -400, 0.5, -300)
MainFrame.Size = UDim2.new(0, 800, 0, 600)
MainFrame.ClipsDescendants = true
CreateCorner(MainFrame, 16)

-- Borde rojo exterior
local Border = Instance.new("Frame")
Border.Name = "Border"
Border.Parent = MainFrame
Border.BackgroundColor3 = Color3.fromRGB(196, 30, 58)  -- Rojo Hades #C41E3A
Border.BorderSizePixel = 0
Border.Position = UDim2.new(0, -2, 0, -2)
Border.Size = UDim2.new(1, 4, 1, 4)
CreateCorner(Border, 18)

-- Barra Superior Roja (Draggable)
local TitleBar = Instance.new("Frame")
TitleBar.Name = "TitleBar"
TitleBar.Parent = MainFrame
TitleBar.BackgroundColor3 = Color3.fromRGB(196, 30, 58)
TitleBar.BorderSizePixel = 0
TitleBar.Size = UDim2.new(1, 0, 0, 50)
CreateCorner(TitleBar, 0)  -- Sin curva arriba

CreateGradient(TitleBar, Color3.fromRGB(255, 50, 80), Color3.fromRGB(196, 30, 58))

-- TÃ­tulo HadesHub
local TitleLabel = Instance.new("TextLabel")
TitleLabel.Name = "Title"
TitleLabel.Parent = TitleBar
TitleLabel.BackgroundTransparency = 1
TitleLabel.Position = UDim2.new(0, 20, 0, 0)
TitleLabel.Size = UDim2.new(0, 200, 1, 0)
TitleLabel.Font = Enum.Font.GothamBold
TitleLabel.Text = "HadesHub"
TitleLabel.TextColor3 = Color3.new(1,1,1)
TitleLabel.TextSize = 18
TitleLabel.TextXAlignment = Enum.TextXAlignment.Left

-- BotÃ³n Minimizar
local MinimizeBtn = Instance.new("TextButton")
MinimizeBtn.Name = "Minimize"
MinimizeBtn.Parent = TitleBar
MinimizeBtn.BackgroundTransparency = 1
MinimizeBtn.Position = UDim2.new(1, -80, 0, 0)
MinimizeBtn.Size = UDim2.new(0, 40, 1, 0)
MinimizeBtn.Font = Enum.Font.Gotham
MinimizeBtn.Text = "â”€"
MinimizeBtn.TextColor3 = Color3.new(1,1,1)
MinimizeBtn.TextSize = 20

-- BotÃ³n Cerrar
local CloseBtn = Instance.new("TextButton")
CloseBtn.Name = "Close"
CloseBtn.Parent = TitleBar
CloseBtn.BackgroundTransparency = 1
CloseBtn.Position = UDim2.new(1, -40, 0, 0)
CloseBtn.Size = UDim2.new(0, 40, 1, 0)
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.Text = "âœ•"
CloseBtn.TextColor3 = Color3.new(1,1,1)
CloseBtn.TextSize = 18

-- Frame de Contenido
ContentFrame = Instance.new("Frame")
ContentFrame.Name = "Content"
ContentFrame.Parent = MainFrame
ContentFrame.BackgroundTransparency = 1
ContentFrame.Position = UDim2.new(0, 0, 0, 50)
ContentFrame.Size = UDim2.new(1, 0, 1, -50)
ContentFrame.ClipsDescendants = true

-- ScrollFrame para contenido
local Scroll = Instance.new("ScrollingFrame")
Scroll.Parent = ContentFrame
Scroll.BackgroundTransparency = 1
Scroll.Position = UDim2.new(0, 20, 0, 20)
Scroll.Size = UDim2.new(1, -40, 1, -40)
Scroll.ScrollBarThickness = 6
Scroll.ScrollBarImageColor3 = Color3.fromRGB(196, 30, 58)
Scroll.CanvasSize = UDim2.new(0, 0, 0, 2000)  -- Ajustar dinÃ¡micamente

local ListLayout = Instance.new("UIListLayout")
ListLayout.Parent = Scroll
ListLayout.Padding = UDim.new(0, 10)
ListLayout.SortOrder = Enum.SortOrder.LayoutOrder

-- FUNCIÃ“N MINIMIZAR
local function ToggleMinimize()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, 300, 0, 50), "Out", "Quad", 0.3, true)
        ContentFrame.Visible = false
        MinimizeBtn.Text = "â–¡"
    else
        MainFrame:TweenSize(UDim2.new(0, 800, 0, 600), "Out", "Quad", 0.3, true)
        ContentFrame.Visible = true
        MinimizeBtn.Text = "â”€"
    end
end

MinimizeBtn.MouseButton1Click:Connect(ToggleMinimize)

-- FUNCIÃ“N CERRAR
CloseBtn.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- DRAG (Movible desde TitleBar)
TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        Dragging = true
        DragStart = input.Position
        StartPos = MainFrame.Position
    end
end)

TitleBar.InputChanged:Connect(function(input)
    if Dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - DragStart
        MainFrame.Position = UDim2.new(StartPos.X.Scale, StartPos.X.Offset + delta.X, StartPos.Y.Scale, StartPos.Y.Offset + delta.Y)
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        Dragging = false
    end
end)

-- TOGGLE VISIBILITY CON INSERT
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.Insert then
        Visible = not Visible
        MainFrame.Visible = Visible
        if Visible and Minimized then ToggleMinimize() end  -- Restaurar si estaba min
    end
end)

-- EJEMPLO BOTONES ROJOS (Agrega mÃ¡s aquÃ­)
local function CreateButton(text, callback)
    local Btn = Instance.new("TextButton")
    Btn.Parent = Scroll
    Btn.BackgroundColor3 = Color3.fromRGB(196, 30, 58)
    Btn.BorderSizePixel = 0
    Btn.Size = UDim2.new(1, -20, 0, 50)
    Btn.Font = Enum.Font.GothamBold
    Btn.Text = text
    Btn.TextColor3 = Color3.new(1,1,1)
    Btn.TextSize = 16
    CreateCorner(Btn, 10)
    CreateGradient(Btn, Color3.fromRGB(255, 50, 80), Color3.fromRGB(196, 30, 58))
    
    Btn.MouseButton1Click:Connect(callback)
    Btn.MouseEnter:Connect(function() Btn.Size = UDim2.new(1, -20, 0, 55) end)
    Btn.MouseLeave:Connect(function() Btn.Size = UDim2.new(1, -20, 0, 50) end)
    
    -- Ajustar CanvasSize
    Scroll.CanvasSize = UDim2.new(0, 0, 0, ListLayout.AbsoluteContentSize.Y + 50)
    ListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        Scroll.CanvasSize = UDim2.new(0, 0, 0, ListLayout.AbsoluteContentSize.Y + 50)
    end)
    
    return Btn
end

-- Botones de ejemplo (Universal Roblox)
local Humanoid = Player.Character and Player.Character:FindFirstChild("Humanoid")

CreateButton("Speed x16", function()
    if Humanoid then Humanoid.WalkSpeed = 100 end
end)

CreateButton("Jump Power 200", function()
    if Humanoid then Humanoid.JumpPower = 200 end
end)

CreateButton("Infinite Yield (Admin)", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
end)

CreateButton("Fly Hack", function()
    loadstring(game:HttpGet("https://pastebin.com/raw/9Kmhe7C3"))()
end)

CreateButton("Noclip", function()
    local noclip = false
    local conn
    conn = RunService.Stepped:Connect(function()
        if noclip then
            for _, part in pairs(Player.Character:GetDescendants()) do
                if part:IsA("BasePart") then part.CanCollide = false end
            end
        end
    end)
    Player:GetMouse().KeyDown:Connect(function(key)
        if key == "n" then noclip = not noclip end
    end)
end)

CreateButton("Rejoin Server", function()
    game:GetService("TeleportService"):Teleport(game.PlaceId, Player)
end)

-- Inicializar minimizado? No, abierta
MainFrame.Visible = false  -- Empieza oculta, Insert para abrir

print("HadesHub cargado! Presiona INSERT ðŸ”¥")
game.StarterGui:SetCore("SendNotification", {
    Title = "HadesHub";
    Text = "Cargado! Presiona INSERT";
    Duration = 5;
})