-- // HadesHub Delta Edition - 2025 \\
-- Creador: tú (y yo ayudándote jaja)
-- Tecla: Insert

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("HadesHub Delta", "DarkTheme")

-- Variables
local Player = game.Players.LocalPlayer
local Char = Player.Character or Player.Character:Wait()
local Humanoid = Char:WaitForChild("Humanoid")

-- == PESTAÑA PRINCIPAL ==
local Main = Window:NewTab("Main", "Main Features")
local MainSection = Main:NewSection("Universal Cheats")

MainSection:NewButton("Speed x4", "Velocidad insana", function()
    Humanoid.WalkSpeed = 80
    print("Speed x4 activado")
end)

MainSection:NewButton("JumpPower 200", "Salta como loco", function()
    Humanoid.JumpPower = 200
end)

MainSection:NewToggle("Infinite Jump", "Salta en el aire todo el tiempo", false, function(state)
    _G.InfJump = state
    if state then
        game:GetService("UserInputService").JumpRequest:Connect(function()
            if _G.InfJump then
                Humanoid:ChangeState("Jumping")
            end
        end)
    end
end)

MainSection:NewButton("Fly (F)", "Vuela con la tecla F", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/BatuKhan1/UniversalFlyScript/main/fly.lua"))()
end)

MainSection:NewButton("Noclip (N)", "Pasa a través de paredes", function()
    _G.Noclip = false
    game:GetService("RunService").Stepped:Connect(function()
        if _G.Noclip then
            for _, v in pairs(Char:GetDescendants()) do
                if v:IsA("BasePart") then
                    v.CanCollide = false
                end
            end
        end
    end)
    game:GetService("UserInputService").InputBegan:Connect(function(key)
        if key.KeyCode == Enum.KeyCode.N then
            _G.Noclip = not _G.Noclip
            print("Noclip: "..tostring(_G.Noclip))
        end
    end)
end)

-- == PESTAÑA SCRIPTS ==
local Scripts = Window:NewTab("Scripts", "Script Hub")
local ScriptsSection = Scripts:NewSection("Popular Scripts")

ScriptsSection:NewButton("Infinite Yield", "El admin más famoso", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
end)

ScriptsSection:NewButton("Owl Hub", "Universal (30+ juegos)", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/CriShoux/OwlHub/master/OwlHub.txt"))()
end)

ScriptsSection:NewButton("Dark Hub", "Muchos juegos soportados", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Rain-Design/DarkHub/master/DarkHub", true))()
end)

ScriptsSection:NewButton("V.G Hub", "Más de 100 juegos", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Vynixius/main/Loader.lua"))()
end)

-- == PESTAÑA SETTINGS ==
local Settings = Window:NewTab("Settings", "Configuración")
local SettingsSection = Settings:NewSection("HadesHub Delta v1")

SettingsSection:NewKeybind("Toggle GUI", "Abrir/Cerrar GUI", Enum.KeyCode.Insert, function()
    Library:ToggleUI()
end)

SettingsSection:NewButton("Rejoin", "Volver al mismo servidor", function()
    game:GetService("TeleportService"):Teleport(game.PlaceId, Player)
end)

SettingsSection:NewButton("Server Hop", "Cambiar de servidor", function()
    local servers = game.HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100")
    local list = game:GetService("HttpService"):JSONDecode(servers)
    for _, v in pairs(list.data) do
        if v.playing < v.maxPlayers and v.id ~= game.JobId then
            game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, v.id)
            break
        end
    end
end)

-- Notificación al cargar
Library:Notify("HadesHub Delta cargado correctamente!", 5)
print("HadesHub Delta by tú + Grok - 2025")