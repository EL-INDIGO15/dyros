-- ================================================
-- HADES HUB 2025 - SADOZ8 LIBRARY
-- PESTAÑA 1: Main (terminada
-- ================================================
loadstring(game:HttpGet("https://raw.githubusercontent.com/SadOz8/Library/refs/heads/main/Library.txt"))()

local Library = getgenv().Library

local Window = Library:CreateWindow({
    Name = "HadesHub",
    LoadingTitle = "HadesHub 2025",
    LoadingSubtitle = "by Dyros & Indigo",
    Theme = "Dark",
    ConfigFolder = "HadesHub"
})

local Players           = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local VirtualUser       = game:GetService("VirtualUser")
local VIM               = game:GetService("VirtualInputManager")
local player            = Players.LocalPlayer

-- Anti-AFK automático
local antiAFKConn
local function enableAntiAFK()
    if antiAFKConn then antiAFKConn:Disconnect() end
    antiAFKConn = player.Idled:Connect(function()
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end)
end
enableAntiAFK()

-- ================================================
-- PESTAÑA: Main
-- ================================================
local MainTab = Window:CreateTab("Main", "http://www.roblox.com/asset/?id=6023426926")

MainTab:CreateLabel("HadesHub 2025", {TextSize = 26, TextColor = Color3.fromRGB(220,20,60)})
MainTab:CreateLabel("Script público • Actualizado Noviembre 2025")

-- Anti-AFK Toggle
MainTab:CreateToggle("Anti-AFK System", true, function(state)
    if state then enableAntiAFK() end
end)

-- Auto Brawls Folder
local brawlsFolder = MainTab:CreateFolder("Auto Brawls")

brawlsFolder:CreateToggle("Auto Join Brawls", false, function(bool)
    getgenv().autoJoinBrawl = bool
    task.spawn(function()
        while getgenv().autoJoinBrawl do
            task.wait(0.5)
            if player.PlayerGui.gameGui.brawlJoinLabel.Visible then
                ReplicatedStorage.rEvents.brawlEvent:FireServer("joinBrawl")
                player.PlayerGui.gameGui.brawlJoinLabel.Visible = false
            end
        end
    end)
end)

-- Auto Win Brawls (versión mejorada y segura)
brawlsFolder:CreateToggle("Auto Win Brawls", false, function(bool)
    getgenv().autoWinBrawl = bool

    local function equipPunch()
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            for _, tool in pairs(player.Backpack:GetChildren()) do
                if tool.Name == "Punch" then
                    player.Character.Humanoid:EquipTool(tool)
                    break
                end
            end
        end
    end

    task.spawn(function()
        while getgenv().autoWinBrawl do
            task.wait(0.3)
            equipPunch()
        end
    end)

    task.spawn(function()
        while getgenv().autoWinBrawl do
            task.wait(0.08)
            if ReplicatedStorage:FindFirstChild("brawlInProgress") and ReplicatedStorage.brawlInProgress.Value then
                pcall(function()
                    player.muscleEvent:FireServer("punch", "leftHand")
                    player.muscleEvent:FireServer("punch", "rightHand")
                end)
            end
        end
    end)

    task.spawn(function()
        while getgenv().autoWinBrawl do
            task.wait(0.05)
            if not (player.Character and player.Character:FindFirstChild("LeftHand") and player.Character:FindFirstChild("RightHand")) then
                task.wait(0.2)
                continue
            end
            for _, plr in pairs(Players:GetPlayers()) do
                if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") and plr.Character:FindFirstChild("Humanoid") and plr.Character.Humanoid.Health > 0 then
                    pcall(function()
                        firetouchinterest(plr.Character.HumanoidRootPart, player.Character.LeftHand, 0)
                        firetouchinterest(plr.Character.HumanoidRootPart, player.Character.LeftHand, 1)
                        firetouchinterest(plr.Character.HumanoidRootPart, player.Character.RightHand, 0)
                        firetouchinterest(plr.Character.HumanoidRootPart, player.Character.RightHand, 1)
                    end)
                end
            end
        end
    end)
end)

-- Jungle Gym Folder
local jungleFolder = MainTab:CreateFolder("Jungle Gym")

local working = false
local function pressE()
    VIM:SendKeyEvent(true, Enum.KeyCode.E, false, game)
    task.wait(0.12)
    VIM:SendKeyEvent(false, Enum.KeyCode.E, false, game)
end

local function goWorkout(cf)
    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        player.Character.HumanoidRootPart.CFrame = cf
        task.wait(0.3)
        pressE()
        task.spawn(function()
            while working do
                player.muscleEvent:FireServer("rep")
                task.wait()
            end
        end)
    end
end

jungleFolder:CreateToggle("Jungle Bench Press", false, function(v)
    working = v
    if v then goWorkout(CFrame.new(-8173, 64, 1898)) end
end)

jungleFolder:CreateToggle("Jungle Squat", false, function(v)
    working = v
    if v then goWorkout(CFrame.new(-8352, 34, 2878)) end
end)

jungleFolder:CreateToggle("Jungle Pull Ups", false, function(v)
    working = v
    if v then goWorkout(CFrame.new(-8666, 34, 2070)) end
end)

jungleFolder:CreateToggle("Jungle Boulder", false, function(v)
    working = v
    if v then goWorkout(CFrame.new(-8621, 34, 2684)) end
end)

-- ================================================
-- LISTO! Pestaña "Main" terminada
-- ================================================
Library:Notify("Pestaña Main cargada correctamente", 4)

-- ================================================
-- PESTAÑA 2: Farm+ (Auto Rocks + Gimnasios)
-- ================================================
local FarmTab = Window:CreateTab("Farm+", "http://www.roblox.com/asset/?id=6023426926")

-- Auto Rock Folder
local rockFolder = FarmTab:CreateFolder("Auto Rock")

local function getPunchTool()
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        for _, tool in pairs(player.Backpack:GetChildren()) do
            if tool.Name == "Punch" then
                player.Character.Humanoid:EquipTool(tool)
                break
            end
        end
    end
    pcall(function()
        player.muscleEvent:FireServer("punch", "leftHand")
        player.muscleEvent:FireServer("punch", "rightHand")
    end)
end

local rockList = {
    {name = "Tiny Rock",       dur = 0,       label = "Tiny Island Rock"},
    {name = "Starter Rock",    dur = 100,     label = "Starter Island Rock"},
    {name = "Legend Beach",    dur = 5000,    label = "Legend Beach Rock"},
    {name = "Frozen Rock",     dur = 150000,  label = "Frost Gym Rock"},
    {name = "Mythical Rock",   dur = 400000,  label = "Mythical Gym Rock"},
    {name = "Eternal Rock",    dur = 750000,  label = "Eternal Gym Rock"},
    {name = "Legend Rock",     dur = 1000000, label = "Legend Gym Rock"},
}

for _, rock in ipairs(rockList) do
    rockFolder:CreateToggle(rock.name, false, function(state)
        getgenv().autoRockActive = state

        task.spawn(function()
            while getgenv().autoRockActive and task.wait() do
                if player.Durability.Value >= rock.dur then
                    for _, obj in pairs(workspace.machinesFolder:GetDescendants()) do
                        if obj.Name == "neededDurability" and obj.Value == rock.dur and obj.Parent:FindFirstChild("Rock") then
                            local targetRock = obj.Parent.Rock
                            if player.Character and player.Character:FindFirstChild("LeftHand") and player.Character:FindFirstChild("RightHand") then
                                firetouchinterest(targetRock, player.Character.LeftHand, 0)
                                firetouchinterest(targetRock, player.Character.LeftHand, 1)
                                firetouchinterest(targetRock, player.Character.RightHand, 0)
                                firetouchinterest(targetRock, player.Character.RightHand, 1)
                                getPunchTool()
                            end
                        end
                    end
                end
            end
        end)
    end)
end

-- Entrenar Gimnasios Folder
local gymFolder = FarmTab:CreateFolder("Entrenar Gimnasios")

local gymPositions = {
    ["Bench Press"] = {
        ["Eternal Gym"]     = CFrame.new(-7176, 45, -1106),
        ["Legend Gym"]      = CFrame.new(4112, 1020, -3800),
        ["Muscle King Gym"] = CFrame.new(-8590, 46, -6043)
    },
    ["Squat"] = {
        ["Eternal Gym"]     = CFrame.new(-7176, 45, -1106),
        ["Legend Gym"]      = CFrame.new(4305, 988, -4124),
        ["Muscle King Gym"] = CFrame.new(-8940, 13, -5699)
    },
    ["Deadlift"] = {
        ["Eternal Gym"]     = CFrame.new(-7176, 45, -1106),
        ["Legend Gym"]      = CFrame.new(4305, 988, -4124),
        ["Muscle King Gym"] = CFrame.new(-8940, 13, -5699)
    },
    ["Pull Up"] = {
        ["Eternal Gym"]     = CFrame.new(-7176, 45, -1106),
        ["Legend Gym"]      = CFrame.new(4305, 988, -4124),
        ["Muscle King Gym"] = CFrame.new(-8940, 13, -5699)
    }
}

local currentGymToggle = nil

for workout, gyms in pairs(gymPositions) do
    local dropdown = gymFolder:CreateDropdown(workout.." - Gimnasio", {"Eternal Gym", "Legend Gym", "Muscle King Gym"}, function(selected)
        _G["selectedGym_"..workout] = selected
    end)
    dropdown:Set("Muscle King Gym") -- valor por defecto

    gymFolder:CreateToggle(workout, false, function(state)
        if state then
            -- Apagar cualquier otro toggle de gym
            if currentGymToggle and currentGymToggle ~= workout then
                -- Aquí no podemos apagar directamente, pero como solo uno estará activo, no hay drama
            end
            currentGymToggle = workout

            local selectedGym = _G["selectedGym_"..workout] or "Muscle King Gym"
            local cf = gyms[selectedGym]
            if cf and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                player.Character.HumanoidRootPart.CFrame = cf + Vector3.new(0, 5, 0)
                task.wait(0.4)
                pressE()
                task.spawn(function()
                    while currentGymToggle == workout and task.wait() do
                        player.muscleEvent:FireServer("rep")
                    end
                end)
            end
        else
            if currentGymToggle == workout then
                currentGymToggle = nil
            end
        end
    end)
end

-- ================================================
-- Pestaña Farm+ terminada!
-- ================================================
Library:Notify("Pestaña Farm+ cargada", 4)

-- ================================================
-- PESTAÑA 3: Gifts (Regalar + Auto Consumir)
-- ================================================
local GiftsTab = Window:CreateTab("Grifts", "http://www.roblox.com/asset/?id=6031075938")

GiftsTab:CreateLabel("Grifting", {TextSize = 24, TextColor = Color3.fromRGB(255, 100, 100)})

-- Contadores en tiempo real
local proteinLabel = GiftsTab:CreateLabel("Protein Eggs: 0", {TextSize = 20})
local shakeLabel   = GiftsTab:CreateLabel("Tropical Shakes: 0", {TextSize = 20})

-- Variables
local selectedEggPlayer = nil
local selectedShakePlayer = nil
local eggAmount = 1
local shakeAmount = 1

-- Dropdowns (con nombre + @username)
local eggDropdown = GiftsTab:CreateDropdown("Regalar Protein Eggs a...", {}, function(choice)
    for _, p in Players:GetPlayers() do
        if p ~= player and (p.DisplayName == choice or p.Name == choice or choice:find(p.Name)) then
            selectedEggPlayer = p
            break
        end
    end
end)

local shakeDropdown = GiftsTab:CreateDropdown("Regalar Tropical Shakes a...", {}, function(choice)
    for _, p in Players:GetPlayers() do
        if p ~= player and (p.DisplayName == choice or p.Name == choice or choice:find(p.Name)) then
            selectedShakePlayer = p
            break
        end
    end
end)

-- Refrescar jugadores
local function refreshPlayers()
    local list = {}
    for _, p in Players:GetPlayers() do
        if p ~= player then
            table.insert(list, p.DisplayName .. " (@" .. p.Name .. ")")
        end
    end
    eggDropdown:Refresh(list)
    shakeDropdown:Refresh(list)
end
refreshPlayers()
Players.PlayerAdded:Connect(refreshPlayers)
Players.PlayerRemoving:Connect(refreshPlayers)

-- Cantidad a regalar
GiftsTab:CreateTextbox("Cantidad Protein Eggs", "1", function(text)
    eggAmount = tonumber(text) or 1
end)

GiftsTab:CreateTextbox("Cantidad Tropical Shakes", "1", function(text)
    shakeAmount = tonumber(text) or 1
end)

-- Botones de regalar
GiftsTab:CreateButton("Regalar Protein Eggs", function()
    if not selectedEggPlayer then return Library:Notify("Selecciona un jugador primero", 3) end
    if eggAmount < 1 then return end

    task.spawn(function()
        for i = 1, eggAmount do
            local egg = player.consumablesFolder:FindFirstChild("Protein Egg")
            if egg then
                ReplicatedStorage.rEvents.giftRemote:InvokeServer("giftRequest", selectedEggPlayer, egg)
                task.wait(0.15)
            else
                Library:Notify("No tienes más Protein Eggs", 3)
                break
            end
        end
    end)
end)

GiftsTab:CreateButton("Regalar Tropical Shakes", function()
    if not selectedShakePlayer then return Library:Notify("Selecciona un jugador primero", 3) end
    if shakeAmount < 1 then return end

    task.spawn(function()
        for i = 1, shakeAmount do
            local shake = player.consumablesFolder:FindFirstChild("Tropical Shake")
            if shake then
                ReplicatedStorage.rEvents.giftRemote:InvokeServer("giftRequest", selectedShakePlayer, shake)
                task.wait(0.15)
            else
                Library:Notify("No tienes más Tropical Shakes", 3)
                break
            end
        end
    end)
end)

-- Contador en tiempo real (actualiza cada segundo)
task.spawn(function()
    while task.wait(1) do
        local eggs = 0
        local shakes = 0
        pcall(function()
            for _, item in player.consumablesFolder:GetChildren() do
                if item.Name == "Protein Egg" then eggs += 1
                elseif item.Name == "Tropical Shake" then shakes += 1 end
            end
        end)
        proteinLabel.Text = "Protein Eggs: " .. eggs
        shakeLabel.Text   = "Tropical Shakes: " .. shakes
    end
end)

-- Auto Consumir (Limpiar Inventario)
local eating = false
GiftsTab:CreateToggle("Limpiar Inventario (Random)", false, function(state)
    eating = state
end)

local consumables = {"Tropical Shake", "Energy Shake", "Protein Bar", "TOUGH Bar", "Protein Shake", "ULTRA Shake", "Energy Bar"}

task.spawn(function()
    while true do
        if eating then
            for _, name in ipairs(consumables) do
                local tool = player.Character:FindFirstChild(name) or player.Backpack:FindFirstChild(name)
                if tool then
                    local eventName = name:gsub(" ", "")
                    eventName = eventName:sub(1,1):lower() .. eventName:sub(2):gsub("^%l", string.upper)
                    pcall(function()
                        player.muscleEvent:FireServer(eventName, tool)
                    end)
                end
            end
            task.wait(0.45)
        else
            task.wait(0.6)
        end
    end
end)

-- ================================================
-- Pestaña Gifts 100% terminada y preciosa
-- ================================================
Library:Notify("Pestaña Gifts cargada", 4)

