Library:Notify("Pestaña Teleport cargada", 4)

-- ================================================
-- PESTAÑA: Misc (incluye Premium Farm, NoClip, etc.)
-- ================================================
local MiscTab = Window:CreateTab("Misc", "http://www.roblox.com/asset/?id=6031075938")

MiscTab:CreateLabel("MISC + PREMIUM FARM", {TextSize = 26, TextColor = Color3.fromRGB(200, 200, 255)})

-- === PREMIUM FARM (dentro de Misc) ===
local premiumFolder = MiscTab:CreateFolder("Premium Rebirth Farm")

local rebirthRunning = false

local function equipPet(petName)
    task.spawn(function()
        ReplicatedStorage.rEvents.equipPetEvent:FireServer("unequipAllPets")
        task.wait(0.2)
        for _, pet in pairs(player.petsFolder.Unique:GetChildren()) do
            if pet.Name == petName then
                ReplicatedStorage.rEvents.equipPetEvent:FireServer("equipPet", pet)
                task.wait(0.3)
                break
            end
        end
    end)
end

local function pressE()
    VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.E, false, game)
    task.wait(0.12)
    VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.E, false, game)
end

premiumFolder:CreateToggle("Rebirth Farm ULTRA (Swift + Tribal)", false, function(state)
    rebirthRunning = state
    if not state then Library:Notify("Rebirth Farm detenido", 4) return end
    Library:Notify("Rebirth Farm ULTRA iniciado", 6)

    task.spawn(function()
        while rebirthRunning do
            equipPet("Swift Samurai")
            task.wait(0.5)

            local current = player.leaderstats.Rebirths.Value
            local cost = 10000 + (5000 * current)
            if player.ultimatesFolder:FindFirstChild("Golden Rebirth") then
                cost = math.floor(cost * (1 - player.ultimatesFolder["Golden Rebirth"].Value * 0.1))
            end

            while rebirthRunning and player.leaderstats.Strength.Value < cost do
                for i = 1, 20 do player.muscleEvent:FireServer("rep") end
                task.wait()
            end

            equipPet("Tribal Overlord")
            task.wait(0.5)

            if player.Character then
                player.Character.HumanoidRootPart.CFrame = CFrame.new(-8621, 34, 2684) -- Jungle Bar Lift
                task.wait(0.8)
                pressE()
                task.wait(1.2)
            end

            local old = player.leaderstats.Rebirths.Value
            repeat
                ReplicatedStorage.rEvents.rebirthRemote:InvokeServer("rebirthRequest")
                task.wait(0.15)
            until player.leaderstats.Rebirths.Value > old or not rebirthRunning

            Library:Notify("Rebirth #"..player.leaderstats.Rebirths.Value.." hecho!", 3)
            task.wait(0.5)
        end
    end)
end)

premiumFolder:CreateToggle("Fast Strength (x20)", false, function(state)
    if state then equipPet("Swift Samurai") end
    task.spawn(function()
        while state do
            for i = 1, 20 do player.muscleEvent:FireServer("rep") end
            task.wait()
        end
    end)
    if not state then ReplicatedStorage.rEvents.equipPetEvent:FireServer("unequipAllPets") end
end)

-- === OTROS MISC ===
local miscFolder = MiscTab:CreateFolder("Movimiento & Visual")

miscFolder:CreateToggle("No-Clip", false, function(state)
    _G.NoClip = state
    if state then
        RunService.Stepped:Connect(function()
            if _G.NoClip and player.Character then
                for _, part in player.Character:GetDescendants() do
                    if part:IsA("BasePart") then part.CanCollide = false end
                end
            end
        end)
    end
end)

miscFolder:CreateToggle("Infinite Jump", false, function(state)
    _G.InfJump = state
    if state then
        game:GetService("UserInputService").JumpRequest:Connect(function()
            if _G.InfJump then
                player.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
            end
        end)
    end
end)

miscFolder:CreateToggle("Hide Frames", false, function(state)
    for _, v in pairs(ReplicatedStorage:GetChildren()) do
        if v.Name:match("Frame$") then v.Visible = not state end
    end
end)

miscFolder:CreateToggle("Lock Position", false, function(state)
    if state and player.Character then
        local pos = player.Character.HumanoidRootPart.CFrame
        RunService.Heartbeat:Connect(function()
            if state and player.Character then
                player.Character.HumanoidRootPart.CFrame = pos
            end
        end)
    end
end)

