   Name = "游 TRAER TODOS",
   Callback = function()
      local all = {"Log","Sapling","Coal","Chair","Oil Barrel","Fuel Canister","Morsel","Carrot","Bunny Foot","Steak","Broken Fan","Bolt","Sheet Metal","Old Radio","Tyre","Bandage","Medkit"}
      local cnt = bringItems(all, "Todos")
