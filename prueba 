local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "99 Noches en el Bosque - Teletransportar",
   LoadingTitle = "Cargando GUI...",
   LoadingSubtitle = "Por Grok",
   ConfigurationSaving = {
      Enabled = false,
      FolderName = "99NochesBosque",
      FileName = "config"
   },
   KeySystem = false
})

local ItemsFolder = workspace:FindFirstChild("Items")
if not ItemsFolder then
   Rayfield:Notify({
      Title = "Error",
      Content = "No se encontr칩 la carpeta 'Items' en workspace.",
      Duration = 8,
   })
   return
end

local Player = game.Players.LocalPlayer
local function getHRP()
   local Char = Player.Character
   if Char then
      return Char:FindFirstChild("HumanoidRootPart")
   end
end

local function bringItems(itemNames, categoryName)
   local hrp = getHRP()
   if not hrp then
      Rayfield:Notify({Title = categoryName, Content = "Personaje no encontrado.", Duration = 3})
      return 0
   end
   
   local count = 0
   local index = 1
   for _, item in pairs(ItemsFolder:GetDescendants()) do
      if item:IsA("Model") and table.find(itemNames, item.Name) then
         pcall(function()
            local offsetX = ((index - 1) % 6 - 3) * 4
            local offsetZ = math.floor((index - 1) / 6) * 4 + 5
            item:PivotTo(hrp.CFrame * CFrame.new(offsetX, 3, offsetZ))
            index = index + 1
            count = count + 1
         end)
      end
   end
   return count
end

-- Pesta침a principal (categor칤as)
local Tab1 = Window:CreateTab("Categor칤as", 4483362458)

Tab1:CreateButton({
   Name = "游뿻 Madera (Log, Sapling)",
   Callback = function()
      local cnt = bringItems({"Log", "Sapling"}, "Madera")
      Rayfield:Notify({Title = "游뿻 Madera", Content = cnt.." items tra칤dos", Duration = 4})
   end,
})

Tab1:CreateButton({
   Name = "游댠 Combustibles",
   Callback = function()
      local cnt = bringItems({"Coal", "Chair", "Oil Barrel", "Fuel Canister"}, "Combustibles")
      Rayfield:Notify({Title = "游댠 Combustibles", Content = cnt.." items tra칤dos", Duration = 4})
   end,
})

Tab1:CreateButton({
   Name = "游꼤 Comida",
   Callback = function()
      local cnt = bringItems({"Morsel", "Carrot", "Bunny Foot", "Steak"}, "Comida")
      Rayfield:Notify({Title = "游꼤 Comida", Content = cnt.." items tra칤dos", Duration = 4})
   end,
})

Tab1:CreateButton({
   Name = "游댤 Metal",
   Callback = function()
      local cnt = bringItems({"Broken Fan", "Bolt", "Sheet Metal", "Old Radio", "Tyre"}, "Metal")
      Rayfield:Notify({Title = "游댤 Metal", Content = cnt.." items tra칤dos", Duration = 4})
   end,
})

Tab1:CreateButton({
   Name = "仇벒잺 Curaci칩n",
   Callback = function()
      local cnt = bringItems({"Bandage", "Medkit"}, "Curaci칩n")
      Rayfield:Notify({Title = "仇벒잺 Curaci칩n", Content = cnt.." items tra칤dos", Duration = 4})
   end,
})

